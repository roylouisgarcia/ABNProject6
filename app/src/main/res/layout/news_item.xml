<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg_top">

        <TextView
            android:id="@+id/webtitle"
            android:textSize="@dimen/title_text_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="@dimen/news_info_padding"
            android:textColor="@android:color/white"
            android:text="Title Here"/>

        <TextView
            android:id="@+id/sectionname"
            android:textSize="@dimen/other_text_size"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:padding="@dimen/news_info_padding"
            tools:text="Section Name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_middle">

        <TextView
            android:id="@+id/url"
            android:textSize="@dimen/other_text_size"
            android:layout_width="0dp"
            android:textColor="@color/fg_text_color"
            android:layout_weight="3"
            android:padding="@dimen/news_info_padding"
            android:layout_height="wrap_content"
            tools:text="www.something.something.com"/>  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg_bottom">

        <TextView
            android:id="@+id/author"
            android:textSize="@dimen/other_text_size"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="@dimen/news_info_padding"
            tools:text="Arthur Author"/>

        <TextView
            android:id="@+id/published_date"
            android:textSize="@dimen/other_text_size"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:padding="@dimen/news_info_padding"
            tools:text="04/14/1976" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_top" />

</LinearLayout>